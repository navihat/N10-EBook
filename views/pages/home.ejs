  title: 'N10-Ebook - Trang chủ',
  content: `
    <section>
      <!-- Sách hay tháng 5 -->
      <div class="book-section">
        <h2 class="section-title">Sách hay tháng 5</h2>
        <div class="book-grid">
          <div class="item">Sách 1</div>
          <div class="item">Sách 2</div>
          <div class="item">Sách 3</div>
          <div class="item">Sách 4</div>
          <div class="item">Sách 5</div>
        </div>
      </div>

      <!-- Sách mới ra mắt -->
      <div class="book-section">
        <h2 class="section-title">Sách mới ra mắt</h2>
        <div class="book-grid">
          <div class="item">Sách 6</div>
          <div class="item">Sách 7</div>
          <div class="item">Sách 8</div>
          <div class="item">Sách 9</div>
          <div class="item">Sách 10</div>
        </div>
      </div>

      <!-- Tác giả nổi bật -->
      <div class="book-section">
        <h2 class="section-title">Tác giả nổi bật</h2>
        <div class="book-grid">
          <div class="item">Sách 11</div>
          <div class="item">Sách 12</div>
          <div class="item">Sách 13</div>
          <div class="item">Sách 14</div>
          <div class="item">Sách 15</div>
        </div>
      </div>
    </section>

    <script>
      function toggleSidebar() {
        const sidebar = document.querySelector('.sidebar');
        const toggleBtn = document.querySelector('.toggle-sidebar i');
        sidebar.classList.toggle('collapsed');
        toggleBtn.classList.toggle('fa-angle-right');
        toggleBtn.classList.toggle('fa-angle-left');
      }

      document.addEventListener("DOMContentLoaded", function () {
        const buttons = document.querySelectorAll(".sidebar-button");

        buttons.forEach(button => {
          const href = button.getAttribute("href");
          if (href && window.location.pathname.includes(href)) {
            button.classList.add("active");
          }
        });
      });
    </script>
  `
}) %>