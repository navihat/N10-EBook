<%- include('../layout', {
  title: 'N10-Ebook - Trang chủ',
  content: `
    <section>
      <!-- Sách hay tháng 5 -->
      <div class="book-section">
        <h2 class="section-title">Sách hay tháng 5</h2>
        <div class="book-grid">
          ${books.slice(0, 5).map(book => `
            <a href="/content/${book.id_book}" class="item">
              <img src="/images/${book.id_book}.jpg" alt="${book.title}" class="book-image"/>
              <div class="book-title">${book.title}</div>
            </a>
          `).join('')}
        </div>
      </div>
 
      <!-- Sách mới ra mắt -->
      <div class="book-section">
        <h2 class="section-title">Sách mới ra mắt</h2>
        <div class="book-grid">
          ${books.slice(5, 10).map(book => `
            <a href="/content/${book.id_book}" class="item">
              <img src="/images/${book.id_book}.jpg" alt="${book.title}" class="book-image"/>
              <div class="book-title">${book.title}</div>
            </a>
          `).join('')}
        </div>
      </div>
 
      <!-- Tác giả nổi bật -->
      <div class="book-section">
        <h2 class="section-title">Xem thêm</h2>
        <div class="book-grid">
          ${books.slice(10, 50).map(book => `
            <a href="/content/${book.id_book}" class="item">
              <img src="/images/${book.id_book}.jpg" alt="${book.title}" class="book-image"/>
              <div class="book-title">${book.title}</div>
            </a>
          `).join('')}
        </div>
      </div>
    </section>
 
    <script>
      function toggleSidebar() {
        const sidebar = document.querySelector('.sidebar');
        const toggleBtn = document.querySelector('.toggle-sidebar i');
        sidebar.classList.toggle('collapsed');
        toggleBtn.classList.toggle('fa-angle-right');
        toggleBtn.classList.toggle('fa-angle-left');
      }
 
      document.addEventListener("DOMContentLoaded", function () {
        const buttons = document.querySelectorAll(".sidebar-button");
 
        buttons.forEach(button => {
          const href = button.getAttribute("href");
          if (href && window.location.pathname.includes(href)) {
            button.classList.add("active");
          }
        });
      });
    </script>
  `
}) %>