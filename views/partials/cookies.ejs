<!-- CSS -->
<style>
  .popup-overlay {
    position: fixed;
    top: 0; left: 0;
    width: 100vw; height: 100vh;
    background: rgba(0,0,0,0.3);
    z-index: 9998;
    display: none;
  }

  .popup-book {
    position: fixed;
    top: 50%; left: 50%;
    transform: translate(-50%, -50%);
    width: 90%;
    max-width: 750px;
    display: flex;
    flex-wrap: wrap;
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    z-index: 9999;
    display: none;
    font-family: 'Asap', sans-serif;
  }

  .popup-left {
    background-color: #ffffff;
    color: #005CD6;
    padding: 30px 25px;
    flex: 1 1 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .popup-left h2 {
    font-size: 28px;
    margin-bottom: 14px;
    margin-top: 14px;
    line-height: 1.3;
  }

  .popup-left p {
    font-size: 16px;
    margin-bottom: 18px;
    line-height: 1.6;
  }

  .popup-btn {
    background: linear-gradient(to right, #E6F1FA, #A5BEFA);
    color: #005CD6;
    padding: 10px 18px;
    text-decoration: none;
    font-weight: bold;
    border-radius: 35px;
    width: fit-content;
    transition: background 0.3s;
  }

  .popup-btn:hover {
    background: #336fe0;
    transform: scale(1.05);
    color: white;
  }

  .popup-right {
    flex: 1 1 50%;
    background: #e6f0ff;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
  }

  .popup-right img {
    max-width: 200%;
    height: auto;
    border-radius: 4px;
  }

  .close-btn {
    position: absolute;
    top: 10px; right: 15px;
    font-size: 24px;
    color: #888;
    cursor: pointer;
    z-index: 10000;
  }

  .close-btn:hover {
    color: #000;
  }
</style>

<!-- Script -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    if (!document.cookie.includes("popupClosed=true")) {
      setTimeout(() => {
        document.getElementById("popup-overlay").style.display = "block";
        document.getElementById("popup-ad").style.display = "flex";
      }, 1000); // sau 60 giây

      document.getElementById("close-popup").addEventListener("click", function () {
        document.getElementById("popup-overlay").style.display = "none";
        document.getElementById("popup-ad").style.display = "none";
        document.cookie = "popupClosed=true; path=/; max-age=" + (7 * 24 * 60 * 60); // 7 ngày (7 * 24 * 60 * 60) 
      });
    }
  });
</script>
