<!-- Nút scroll to top -->
<button id="scrollToTopBtn" title="Lên đầu trang">
  <i class="fas fa-chevron-up"></i>
</button>
<style>
#scrollToTopBtn {
  position: fixed;
  bottom: 50px;
  right: 50px;
  z-index: 999;
  background-color: #2155cd;
  color: white;
  border: none;
  padding: 14px 16px;
  border-radius: 50%;
  font-size: 18px;
  cursor: pointer;
  opacity: 0.5;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
  display: none;
  transition: all 0.3s ease;
  animation: fadeInUp 0.5s ease-out;
}

#scrollToTopBtn:hover {
  opacity: 1;
  background-color: #1a45a0;
  transform: translateY(-3px);
}

/* Khi scroll xuống mới thêm class visible */
#scrollToTopBtn.visible {
  display: block;
}
</style>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const contentArea = document.querySelector(".content-area");
    const scrollBtn = document.getElementById("scrollToTopBtn");

    // Kiểm tra có đủ nội dung để cuộn không
    const checkScrollable = () => {
      const isScrollable = contentArea.scrollHeight > contentArea.clientHeight + 50;
      scrollBtn.style.display = isScrollable ? "block" : "none";
    };

    checkScrollable(); // Kiểm tra ngay khi tải
    window.addEventListener("resize", checkScrollable); // Kiểm tra khi thay đổi kích thước

    contentArea.addEventListener("scroll", function () {
      if (contentArea.scrollTop > 100) {
        scrollBtn.classList.add("visible");
      } else {
        scrollBtn.classList.remove("visible");
      }
    });

    scrollBtn.addEventListener("click", function () {
      contentArea.scrollTo({
        top: 0,
        behavior: "smooth"
      });
    });
  });
</script>